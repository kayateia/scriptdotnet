<UserControl x:Class="ScriptIde_SL.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <StackPanel>
        <TextBox VerticalScrollBarVisibility="Visible" AcceptsReturn="True" Height="150" x:Name="codeText" Text="2^10-1;"></TextBox>
        <Button Content="Run" Click="Execute"></Button>
        <TextBox Background="Black" VerticalScrollBarVisibility="Visible" Text="" Foreground="Gold" Height="50" IsReadOnly="True" x:Name="resultText"></TextBox>
    </StackPanel>
</UserControl>
